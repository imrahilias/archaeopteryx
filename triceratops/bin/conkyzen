#!/bin/bash
# conky > dzen2 > statusbar 
# ~/scripts/conkyzen

#layout
wl=1020 #width left
wr=900 #wl + wr = 1920
hu=24 #height up
hd=20
xl=0 #x pos left
xr=$wl
yd=1056 #y pos down
yu=0

bar="${HOME}/.conky/conkyzenbar"

#colors & style :: look in .xresources
#bg="#303030" #241e1e
#style="-bg $bg -e ''"


#output
conky -c $bar | dzen2 -x $xr -y $yu -h $hu -w $wr -ta 'r' -e '' & #top right bar
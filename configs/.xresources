!~/.xresources > imrahil@triceratops
! <xfontsel> for selection

! Applications without fontconfig support
Xft.antialias: 1
Xft.autohint: 0
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! DZEN2
dzen2.font:       xft:Bitstream Vera Sans Mono:size=14:style=Bold
dzen2.foreground: #6a6464
dzen2.background: #241e1e

! Emacs
Emacs.FontBackend: xft
!Emacs.font: Bitstream Vera Sans Mono-12
!Emacs.font: xft:Bitstream Vera Sans Mono:size=12:antialise:true
Emacs.font: -unknown-DejaVu Sans Mono-normal-normal-normal-*-*-*-*-*-m-0-iso10646-1
Emacs*foreground:   #A89C8C
Emacs*background:   #241e1e
Emacs*cursorColor:  white
Emacs*pointerColor: white

!URXVT
urxvt*termname:  consolicus
urxvt*title: consolicus
urxvt*loginshell: true ! > ttps://wiki.archlinux.org/index.php/Rxvt-unicode
urxvt*scrollBar: false
urxvt*saveLines: 10000
urxvt*pointerblank: true
urxvt*letterSpace: 0
urxvt*font: xft:Bitstream Vera Sans Mono:size=12
urxvt*boldFont: xft:Bitstream Vera Sans Mono:size=12:style=Bold
urxvt*foreground:       #A89C8C
urxvt*background:       #241e1e
urxvt*fading: 30	!Fade the text by the given percentage when focus is lost.

!native transparency
urxvt*transparent: true
urxvt*shading: 50	! 0 to 99 darkens, 101 to 200 lightens
.
!real transparency > needs xcompmgr
urxvt.depth: 32
urxvt.background: [95]#000000



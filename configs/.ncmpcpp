## ~/.ncmpcpp/config

# ---------- mpd ---------- 
mpd_host = "127.0.0.1"
mpd_music_dir = "~/.mpd/music"
#mpd_crossfade_time = "2"
message_delay_time = "4"
seek_time = "4"


# ---------- format ---------- 
song_list_format = "$1{$8%n$1 │ $5%a$1 │ $8%t $7(%l)$1 | %f} $R{$6%b $7(%y)}$9"
song_columns_list_format = " (5)[blue]{n} (6)[magenta]{lr} (35)[blue]{t} (30)[cyan]{a} (20)[green]{bEr} (4)[white]{yE}"
song_status_format = "$1{$8%n$1 │ $5%a$1 | $6%b $7(%y)$1 │ $8%t $7(%l)$1 | %f$9}"
song_library_format = "$8{%n - }{%t}|{%f}"
song_window_title_format = "$1{$8%n$1 │ $5%a$1 | $6%b $7(%y)$1 │ $8%t $7(%l)$1 | %f$9}"
#song_window_title_format = "{%a - %t [%l]}"
tag_editor_album_format = "{(%y) }%b"media_library_album_format = "$7(%y)$3%b"
media_library_left_column = "a"
browser_playlist_prefix = "$2playlist$9 » "


# ---------- colors ----------
colors_enabled = "yes"
color1 = "red"
color2 = "black"
empty_tag_color = "red"
main_window_color = "magenta"
main_window_highlight_color = "blue"
active_column_color = "green"
active_window_border = "black"
window_border_color = "black"
statusbar_color = "white"
header_window_color = "magenta"
progressbar_color = "cyan"
progressbar_look = "─╸·"
active_column_color = "white"


# ---------- misc ----------
#use_console_editor = "yes"
external_editor = 'emacsclient -c -a ""'
default_tag_editor_left_col = "artists"
default_tag_editor_pattern = "%n - %t"
default_find_mode = "wrapped"
default_space_mode = "add"
default_place_to_search_in = "database"
ncmpc_like_songs_adding = "yes"
show_hidden_files_in_local_browser = "no"
playlist_separate_albums = "no"
display_screens_numbers_on_start = "no"
colors_enabled = "yes"
mouse_support = "yes"
header_text_scrolling = "yes"
fancy_scrolling = "yes"
cyclic_scrolling = "yes"
lines_scrolled = "2"

user_interface = "classic"
browser_display_mode = "classic"
search_engine_display_mode = "classic"
playlist_display_mode = "classic"
playlist_show_remaining_time = "yes"

enable_window_title = "yes"
header_visibility = "yes"
statusbar_visibility = "yes"
progressbar_look = "─╸·"
now_playing_prefix = "$b"
now_playing_suffix = "$3♫ $9$/b"
playlist_disable_highlight_delay = "0"
autocenter_mode = "yes"
incremental_seeking = "yes"
display_screens_numbers_on_start = "no"
jump_to_now_playing_song_at_start = "yes"
ask_before_clearing_main_playlist = "yes"

clock_display_seconds = "yes"
display_bitrate = "yes"
display_remaining_time = "no"

follow_now_playing_lyrics = "no"
ignore_leading_the = "no"
block_search_constraints_change_if_items_found = "no"
allow_physical_files_deletion = "no"
allow_physical_directories_deletion = "no"
regular_expressions = "extended"


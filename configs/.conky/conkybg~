TEXT

${font xxft:Bitstream Vera Sans Mono:size=40}${time %H:%M}${font}

${hr 2}

${execpi 60 DJS=`date +%_d`; cal -h | sed '1d' | sed 's/^/${alignr} /' | sed s/"\(^\|[^0-9]\)$DJS"'\b'/'\1${color orange}'"$DJS"'${color grey}'/ }$color

${color}${cpugraph cpu0 30,300 556B2F ddaa00}${color}

#cpu temp:	$acpitemp°C
vga:           +${execi 3 nvidia-settings -q [GPU:0]/GPUCoreTemp | grep Attribute | cut -d ' ' -f 6 | cut -c 1-2}.0°C${color}
freq:          $freq
load:	        $loadavg
processes:    $processes  
running:    $running_processes

cpu top five
${hr 1}${color #ddaa00}
${top cpu 1}	${top pid 1}	${top name 1}$color
${top cpu 2}	${top pid 2}	${top name 2}
${top cpu 3}	${top pid 3}	${top name 3}
${top cpu 4}	${top pid 4}	${top name 4}
${top cpu 5}	${top pid 5}	${top name 5}

mem top five
${hr 1}${color #ddaa00}
${top_mem mem 1}	${top_mem pid 1}	${top_mem name 1}$color
${top_mem mem 2}	${top_mem pid 2}	${top_mem name 2}
${top_mem mem 3}	${top_mem pid 3}	${top_mem name 3}
${top_mem mem 4}	${top_mem pid 4}	${top_mem name 4}
${top_mem mem 5}	${top_mem pid 5}	${top_mem name 5}

disk io
${diskiograph 30,300 000000 grey}
/ ${diskio sda} | zero ${diskio sdc} | 0k3 ${diskio sdb}

net
${upspeedgraph eth0 30,150 000000 ffffff}${downspeedgraph eth0 30,150 000000 ffffff}
Up: ${upspeed eth0} k/s    Down: ${downspeed eth0}k/s


mem
${membar 10,150} $mem/$memmax

#swap
#${swapbar 10,150} $swapperc

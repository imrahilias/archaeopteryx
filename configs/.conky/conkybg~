TEXT
#
${font xft:Bitstream Vera Sans Mono:size=40}${time %H:%M}${font}

${hr 2}

${color A89C8C}${alignr}${exec cal -h | sed -n '2 p'}$color
${execpi 60 DJS=`date +%_d`; cal -h | sed -n '3,8 p' | sed 's/^/${alignr} /' | sed s/"\(^\|[^0-9]\)$DJS"'\b'/'\1${color #FF8E38}'"$DJS"'${color A89C8C}'/ }$color

${color}${cpugraph cpu0 30,300 A89C8C FF8E38}${color}

#cpu temp:	$acpitemp°C
gpus:$color          +${execi 3 nvidia-settings -q [GPU:0]/GPUCoreTemp | grep Attribute | cut -d ' ' -f 6 | cut -c 1-2}.0°C${color}\
 / +${execi 3 nvidia-settings -q [GPU:1]/GPUCoreTemp | grep Attribute | cut -d ' ' -f 6 | cut -c 1-2}.0°C${color}
freqs: #${execi 3 nvidia-settings -q [GPU:1]/GPUCurrentPerfLevel | grep Attribute | cut -d ' ' -f 6 | cut -c 1}${color}\
#/${execi 3 nvidia-settings -q [GPU:1]/GPUCurrentPerfLevel | grep Attribute | cut -d ' ' -f 6 | cut -c 1}${color}
        ${execi 3 nvidia-settings -q [GPU:0]/GPUCurrentClockFreqs | grep Attribute | cut -d ' ' -f 6 | sed 's/\.//'}${color}\
 / ${execi 3 nvidia-settings -q [GPU:0]/GPUCurrentClockFreqs | grep Attribute | cut -d ' ' -f 6 | sed 's/\.//'}${color}
cpu:$color           ${execi 3 sensors | grep 'Core 0' | awk '{print $3}'}
freq:$color          $freq
load:$color	   $loadavg
proc:$color       $running_processes /$processes
disk:$color          +${execi 60 hddtemp /dev/sdb | awk '{print $4}'}
	   
cpu top five
${hr 1}${color #FF8E38}
${top cpu 1}	${top pid 1}	${top name 1}$color
${top cpu 2}	${top pid 2}	${top name 2}
${top cpu 3}	${top pid 3}	${top name 3}
${top cpu 4}	${top pid 4}	${top name 4}
${top cpu 5}	${top pid 5}	${top name 5}

mem top five
${hr 1}${color #FF8E38}
${top_mem mem 1}	${top_mem pid 1}	${top_mem name 1}$color
${top_mem mem 2}	${top_mem pid 2}	${top_mem name 2}
${top_mem mem 3}	${top_mem pid 3}	${top_mem name 3}
${top_mem mem 4}	${top_mem pid 4}	${top_mem name 4}
${top_mem mem 5}	${top_mem pid 5}	${top_mem name 5}

disk io
${diskiograph 30,300 000000 A89C8C}
 / ${diskio sda}  |  zero ${diskio sdc}  |  0k3 ${diskio sdb}

net
${upspeedgraph eth0 30,150 000000 ffffff}${downspeedgraph eth0 30,150 000000 ffffff}
  Up: ${upspeed eth0} k/s      Down: ${downspeed eth0}k/s

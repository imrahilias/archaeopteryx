#${pop3_unseen  **SERVER NAME**  **USERNAME**  **PASSWORD**} new messages
#${color 9ACD32}${font}Email:${color a4a4a4}${alignr}${execi 300 perl ~/scripts/gmail.pl n} new
#${color BE8CFC}${hr 1}${color}
#${alignr}${execpi 60 DJS=`date +%_d`; cal | sed '1d' | sed '/./!d' | sed 's/$/ /' | fold -w 21 | sed -n '/^.\{21\}/p' | sed 's/^/${alignr} /' | sed /" $DJS "/s/" $DJS "/" "'${color BE8CFC}'"$DJS"'${color E6DBFF}'" "/}${font}
#${color2}${font LCDMono:bold:size=10} ${execpi 60 DJS=`date +%_d`; cal | sed '1d' | sed '/./!d' | sed 's/$/ /' | fold -w 21 | sed -n '/^.\{21\}/p' | sed 's/^/${alignc} /' | sed /" $DJS "/s/" $DJS "/" "'${color1}'"$DJS"'${color2}'" "/}

#$nodename - $sysname $kernel
#${color a4a4a4}${font DotMatrix:size=18}${time %k:%M}${font}


TEXT
mem
${membar 10,150} $mem/$memmax

swap
${swapbar 10,150} $swapperc

/
${fs_bar 10,150 /} ${fs_free /}/${fs_size /}

zero
${fs_bar 10,150 /media/zero} ${fs_free /media/zero}/${fs_size /media/zero}

exil
${fs_bar 10,150 /media/exil} ${fs_free /media/exil}/${fs_size /media/exil}


log
${hr 1}
${execi 60 sudo tail -n3 /var/log/messages | awk '{print " ",$5,$9,$10}'}
